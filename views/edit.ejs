        <%- include("partials/header.ejs") %>

        <div class="container w-50">
            <h1 class="text-uppercase text-center">Edit</h1>
            <form action="/<%= user.role === "admin" ? "edit" : "editBookUser" %>/<%= data.book_id %>" method="POST">
                <input type="text" class="form-control" id="modId" name="book_id" hidden />
                <input type="text" value="<%= user.role %>" hidden />
                <div class="form-group">
                    <label for="bookName" class="form-label">Book Name</label>
                    <input type="text" class="form-control" id="modBookName" name="book_name" value="<%= data.book_name %>" required />
                </div>
                <div class="form-group">
                    <label for="dateReceived" class="form-label">Date Received</label>
                    <input type="date" class="form-control" id="modDateReceived" name="date_received" value="<%= data.date_received %>" required />
                </div>
                <div class="form-group">
                    <label for="good" class="form-label">Good</label>
                    <input type="number" class="form-control" id="modGood" name="good" value="<%= data.good %>" oninput="calculateBooksModal()" required />
                </div>
                <div class="form-group">
                    <label for="damage" class="form-label">Damage</label>
                    <input type="number" class="form-control" id="modDamage" name="damage" value="<%= data.damage %>" oninput="calculateBooksModal()" required />
                </div>
                <div class="form-group">
                    <label for="total" class="form-label">Total</label>
                    <input type="number" class="form-control" id="modTotal" name="total" value="<%= data.total %>" readonly>
                </div>

                <div class="mt-4">
                    <a href="/dashboard" class="btn btn-secondary"> Back </a>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>

        <%- include("partials/footer.ejs") %>